    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "husky:install": "husky install",
        "exec:kms": "cross-env IS_TS_NODE=true ts-node -r tsconfig-paths/register test/kms",
        "prebuild": "rimraf dist",
        "build": "tsc -p ./tsconfig.build.json",
        "lint": "eslint \"{src,apps,libs}/**/*.+(js|json|ts|tsx)\" --fix",
        "pre-commit": "lint-staged && yarn build && yarn test",
        "prepare": "npm run build",
        "testx": "jest --verbose --maxWorkers=3",
        "testy": "jest --verbose",
        "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
        "test:clear": "npx jest --clearCache"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^19.2.2",
        "@google-cloud/secret-manager": "^5.5.0",
        "@google-cloud/storage": "^7.11.0",
        "@types/jest": "^29.5.12",
        "@types/lodash": "^4.17.3",
        "@types/node": "^20.12.12",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "^7.9.0",
        "amqplib": "^0.10.4",
        "aws-sdk": "^2.1622.0",
        "commitlint": "^19.3.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.56.0",
        "git-commit-msg-linter": "^5.0.7",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.2",
        "rimraf": "^5.0.7",
        "ssh2-sftp-client": "^10.0.3",
        "ts-jest": "^29.1.2",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "debug": "^4.3.4",
        "lodash": "^4.17.21"
    },
    "files": [
        "/dist"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}